@model Account

<!DOCTYPE html>
<html>
<head>
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Müşteri Düzenle</h1>

        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label for="UserName" class="form-label">Ad:</label>
                <input type="text" class="form-control" id="UserName" asp-for="UserName" />
                <span asp-validation-for="UserName" class="text-danger"></span>
                
            </div>
       
            <div class="mb-3">
                <label for="Email" class="form-label">E-posta:</label>
                <input type="email" class="form-control" id="Email" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Şifre:</label>
                <input type="text" class="form-control" id="Password" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        
            <div class="mb-3">
                <label for="BirthDate" class="form-label">Doğum Tarihi:</label>
                <input type="datetime" class="form-control" id="BirthDate" asp-for="BirthDate" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div>
                <button type="submit" class="btn btn-success">Kaydet</button>
            </div>
        </form>

        <a asp-action="Index" class="btn btn-secondary mt-3">Listeye Dön...</a>
    </div>

   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
