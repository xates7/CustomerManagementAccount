@model List<Account>

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div>
            <h1>Kullanıcı Girişi</h1>
            
          

            <table id="account" class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        
                        <th>Kullanıcı Adı</th>
                        <th>E-posta</th>
                        <th>Şifre</th>
                        <th>Doğum Tarihi</th>
                        <th>Çevrim Durumu</th>
                        <th>İşlemler</th>
                        <th><a href="/Home/Hello" class="btn btn-danger mt-3">Çıkış yap</a></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var account in Model)
                    {
                        <tr>
                            
                            <td>@account.UserName</td>
                            <td>@account.Email</td>
                            <td>@account.Password</td>
                            <td>@account.BirthDate.Value.ToString("dd.MM.yyyy")</td>
                            <td>
                                @if (account.IsOnline)
                                {
                                    <span class="text-success">Çevrimiçi</span>
                                }
                                else
                                {
                                    <span class="text-danger">Çevrimdışı</span>
                                }
                            </td>

                            <td>
                                <a asp-action="Edit" asp-route-id="@account.Id" class="btn btn-warning">Düzenle</a>
                               
                                    <a asp-action="Delete" asp-route-id="@account.Id" class="btn btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

          
             <a href="/Customer/Create" class="btn btn-success"> Yeni Müşteri Ekle</a>

        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
